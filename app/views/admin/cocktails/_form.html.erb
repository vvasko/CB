<div class="body_panel panel-default">
  <div class="panel-heading">
    <%= form_field_text(f, :name) %>
  </div>

  <div class='field form-group'>
    <%= f.label :description, class: 'col-md-2 control-label' %>
    <div class='col-sm-10'>
      <%= f.text_area :description, class: 'form-comtrol', rows: 5 %>
    </div>
    </div>

  <div class='field form-group'>
    <%= f.label :image, class: 'col-md-2 control-label' %>
    <div class='col-sm-3'>
      <%= f.file_field :image, multiple: false %>
    </div>
  </div>


  <% if @cocktail.image? %>
      <div class='field form-group'>
        <div class='col-md-2 control-label'></div>

        <div class='col-sm-5'>
          <%= f.check_box :remove_image %>
        </div>
      </div>

      <div class="field form-group">
        <div class='col-md-2 control-label'></div>
        <div class='col-sm-10'>
          <%= image_tag(@cocktail.image_url, size: '380', class: "img-thumbnail")%>
        </div>
      </div>

  <% end %>

</div>


<div class="body_panel panel-default">
  <div class="panel-body">
    <legend><%= :ingridients %></legend>
    <%= f.fields_for :ingridients do |ingridients_form| %>
      <div class="field form-group">
        <div class="form-group row">
          <%= form_number_field(ingridients_form,:value) %>
          <%= form_select_field(ingridients_form, :product_id, Product.all, :id, :tname, {:prompt => true}) %>
        </div>
      </div>
    <% end %>

    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Save"%>
      </div>
    </div>
  </div>
</div>






