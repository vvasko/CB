<div class="page-header">
  <h1><%= controller_name.humanize %>
    <%# if @cocktails.empty? %>
        <!--<small> have not been created yet</small>-->
    <%# else %>
        <!--<small><%= action_name %></small>-->
    <%# end %>
    <div class="btn-group right" role="group">
      <%= link_to 'Add waiter', new_admin_waiter_path %>
    </div>
  </h1>
</div>

<div class="body_panel panel-default">
  <div class="panel-body">
    <table class="table table-hover">
      <tr>
        <th>Id</th>
        <th>Name
          <%#= get_sort_buttons(admin_order_cocktails_path(:name, 'asc'), admin_order_cocktails_path(:name, 'desc')) %>
        </th>
        <th>Last name</th>
        <th>Tables
          <%#= get_sort_buttons(admin_order_cocktails_path(:price, 'asc'), admin_order_cocktails_path(:price, 'desc')) %>
        </th>
        <th>Actions</th>
        <!--<th></th>-->
      </tr>
      <% @waiters.each do |waiter| %>
          <tr>
            <td><%= waiter.id %></td>
            <!--<td><%#= link_to cocktail.name, admin_cocktail_path(cocktail) %></td>-->
            <td><%= waiter.firstname %></td>
            <td><%= waiter.lastname %></td>
            <td><%= link_to @worksets.count, admin_waiter_path(waiter)%></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to 'edit', edit_admin_waiter_path(waiter) %>
                <%= link_to 'remove', admin_waiter_path(waiter), method: :delete, data: {confirm: 'Are you sure?'} %>
              </div>
            </td>
          </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="body_panel panel-default">
  <%#= draw_pagination @items_count, @per_page %>
</div>
