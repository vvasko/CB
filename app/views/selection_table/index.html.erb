<div class="page-header">
  <h1>Please select your table
  </h1>
</div>

<div class="body_panel panel-default">
  <div class="panel-body">
    <div class="row-eq-height">
      <% if @tables.blank? %>
          <h1>Sorry no available tables</h1>
      <% else %>
          <% @tables.each do |table| %>
              <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 table_icon"><%= link_to table.id, select_table_path(table.id) %></div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
